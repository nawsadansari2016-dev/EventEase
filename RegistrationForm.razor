@page "/register"

<h3>Event Registration</h3>

<EditForm Model="@user" OnValidSubmit="@RegisterUser">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <InputText @bind-Value="user.Name" class="form-control" placeholder="Your Name" />
    <InputText @bind-Value="user.Email" class="form-control mt-2" placeholder="Email Address" />
    <button class="btn btn-primary mt-3">Register</button>
</EditForm>

@if (registered)
{
    <p class="mt-3 text-success">Thank you for registering, @user.Name!</p>
}

@code {
    private User user = new();
    private bool registered = false;

    private void RegisterUser() => registered = true;

    private class User
    {
        public string Name { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
    }
}
